#include <stdio.h>

#define MAX_SIZE 100

int array[MAX_SIZE];
int size;

int linear_search(int item) {
    int i;
    for (i = 0; i < size; i++) {
        if (array[i] == item) {
            return i;
        }
    }
    return -1;
}

int main() {
    int i, item, pos;

    printf("Enter the number of elements in the array: ");
    scanf("%d", &size);

    printf("Enter %d elements\n", size);
    for (i = 0; i < size; i++) {
        scanf("%d", &array[i]);
    }

    printf("Enter the item to be searched: ");
    scanf("%d", &item);

    pos = linear_search(item);
    if (pos == -1) {
        printf("Item not found in the array\n");
    } else {
        printf("Item found at position %d\n", pos + 1);
    }

    return 0;
}
