#include <stdio.h>

#define MAX_SIZE 100

int array[MAX_SIZE];
int size = 0;

void insert(int item, int pos) {
    int i;
    if (pos >= 0 && pos <= size) {
        for (i = size - 1; i >= pos; i--) {
            array[i + 1] = array[i];
        }
        array[pos] = item;
        size++;
    } else {
        printf("Invalid position!\n");
    }
}

voiddelete(int pos) {
    int i;
    if (pos >= 0 && pos <= size - 1) {
        for (i = pos; i < size - 1; i++) {
            array[i] = array[i + 1];
        }
        size--;
    } else {
        printf("Invalid position!\n");
    }
}

void display() {
    int i;
    if (size == 0) {
        printf("Array is empty!\n");
    } else {
        printf("Array elements are: ");
        for (i = 0; i < size; i++) {
            printf("%d ", array[i]);
        }
        printf("\n");
    }
}

int main() {
    int choice, item, pos;

    while (1) {
        printf("1. Insert\n");
        printf("2. Delete\n");
        printf("3. Display\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter an item: ");
                scanf("%d", &item);
                printf("Enter the position: ");
                scanf("%d", &pos);
                insert(item, pos);
                break;
            case 2:
                printf("Enter the position: ");
                scanf("%d", &pos);
                int(pos);
                break;
            case 3:
                display();
                break;
            case 4:
                return 0;
            default:
                printf("Invalid choice!\n");
        }
    }

    return 0;
