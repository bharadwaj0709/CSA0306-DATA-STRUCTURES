#include <stdio.h>
#include <stdbool.h>

#define MAX_SIZE 100

int array[MAX_SIZE];
int size;

bool binary_search(int item, int low, int high) {
    if (low <= high) {
        int mid = (low + high) / 2;
        if (array[mid] == item) {
            return true;
        } else if (array[mid] > item) {
            return binary_search(item, low, mid - 1);
        } else {
            return binary_search(item, mid + 1, high);
        }
    }
    return false;
}

int main() {
    int i, item;

    printf("Enter the number of elements in the array: ");
    scanf("%d", &size);

    printf("Enter %d elements in ascending order\n", size);
    for (i = 0; i < size; i++) {
        scanf("%d", &array[i]);
    }

    printf("Enter the item to be searched: ");
    scanf("%d", &item);

    if (binary_search(item, 0, size - 1)) {
        printf("Item found in the array\n");
    } else {
        printf("Item not found in the array\n");
    }

    return 0;
}
